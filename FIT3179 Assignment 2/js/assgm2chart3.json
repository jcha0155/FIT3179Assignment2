{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 650,
    "height": 600,
    "title": "Total Number of Homicide Deaths Contrasted with Actual Population size (as per 2019)",
    
    
    "data": {
      "url": "https://raw.githubusercontent.com/jcha0155/3179/main/Week10Homework/data/datasethomeworkw10.csv"
    },
    "params": [
        {
          "name": "Deaths",
          "value": 10,
          "bind": {
            "input": "range",
            "min": 0,
            "max": 100000,
            "step": 1,
            "name": "Minimum Number of Death Cases: "
          }
        }
      ],
    "transform": [
        {"filter": "datum.Population > 0"},
        {"filter": "datum.Deaths > 0"},
        {
          "calculate": "datum.Deaths/datum.Population * 10000",
          "as": "Deaths per 10,000 Population"
      },
      {"filter": "datum.Deaths > Deaths"}
    
      ],
           
            "encoding": {
              "x": {
                "field": "Population",
                "type": "quantitative",
                "title": "Population",
                "axis": {
                  "tickCount": 7
                },
                "scale": {
                  "domain": [
                    500000,
                    250000000
                  ]
                }
              },
              "y": {
                "field": "Deaths",
                "type": "quantitative",
                "axis": {
                  "tickCount": 6
                },
                "scale": {
                  "type": "log",
                  "domain": [
                    1,
                    1000000
                  ]
                }
              }
            },
            "layer": [
              {
                "mark": "circle",
                "encoding": {
                  "size": {
                    "field": "Population",
                    "type": "quantitative",
                    "scale": {
                      "type": "threshold",
                      "domain": [
                        1000000,
                        10000000,
                        50000000,
                        100000000,
                        500000000
                      ],
                      "range": [
                        10,
                        50,
                        150,
                        200,
                        300,
                        400
                      ]
                    },
                    "legend": {
                      "format": ".1s",
                      "offset": 18
                    }
                  },
                  "color": {
                    "field": "Country",
                    "type": "nominal",
                    "scale": {
                      "domain": [
                        "Argentina",
                        "Bolivia",
                        "Brazil",
                        "Chile",
                        "Colombia",
                        "Ecuador",
                        "Guyana",
                        "Paraguay",
                        "Peru",
                        "Suriname",
                        "Uruguay",
                        "Venezuela"
          
                      ],
                      "range": [
                        "#e41a1c",
                        "#984ea3",
                        "#ff7f00",
                        "#a6cee3",
                        "#377eb8",
                        "#a65628",
                        "#1c9099",
                        "#feb24c",
                        "#31a354",
                        "#000",
                        "#636363",
                        "#addd8e"
                      ]
                    }
                  },
                  "opacity": {
                    "value": 0.9
                  },
                  "tooltip": [
                    {
                      "field": "Country",
                      "type": "nominal"
                    },
                    {
                      "field": "Deaths",
                      "type": "quantitative",
                      "format": ","
                    },
                    {
                      "field": "Population",
                      "type": "quantitative",
                      "format": ","
                    },
                    {
                      "field": "Deaths per 10,000 Population",
                      "type": "quantitative",
                      "format": ".2f"
                    }
                  ]
                }
              },
              {
                "mark": {
                  "type": "text",
                  "align": "right",
                  "baseline": "top",
                  "dx": 17,
                  "fontSize": 9,
                  "fontStyle": "italic"
                },
                "encoding": {
                  "text": {
                    "field": "Country",
                    "type": "nominal"
                  },
                  "color": {
                    "value": "black"
                  },
                  "opacity": {
                    "condition": {
                      "test": "datum['Country'] == 'Brazil' || datum['Country'] =='Argentina' || datum['Country'] == 'Suriname' || datum['Country'] =='Guyana' || datum['Country'] == 'Uruguay' || datum['Country'] == 'Bolivia' || datum['Country'] == 'Chile'||datum['Country'] == 'Paraguay'||datum['Country'] == 'Colombia'||datum['Country'] == 'Venezuela'||datum['Country'] == 'Peru'||datum['Country'] == 'Ecuador'",
                      "value": 1
                    },
                    "value": 0
                  },
                 "tooltip": [
                    {
                      "field": "Country",
                      "type": "nominal"
                    },
                    {
                      "field": "Deaths",
                      "type": "quantitative",
                      "format": ","
                    },
                    {
                      "field": "Population",
                      "type": "quantitative",
                      "format": ","
                    },
                    {
                      "field": "Deaths per 10,000 Population",
                      "type": "quantitative",
                      "format": ".2f"
                    }
                  ]
                }
              }
            
                
    ]
  }
  
  